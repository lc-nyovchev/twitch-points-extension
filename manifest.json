{
    "manifest_version": 3,
    "name": "Twitch Points",
    "description": "Extension which automatically claims Twitch points",
    "version": "1.2",
    "icons": {
        "48": "src/icons/48x-twitch-points-extension.png",
        "128": "src/icons/128x-twitch-points-extension.png"
    },
    "background": {
        "service_worker": "src/twitch-points-extension-background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*.twitch.tv/*"],
            "js": ["src/twitch-points-extension.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["storage"],
    "action": {
        "default_popup": "src/twitch-points-extension.html",
        "default_icon": {
            "128": "src/icons/128x-twitch-points-extension.png"
        }
    }
}
